.card
  display flex
  justify-content space-between
  width 100%
  height 160px
  margin-bottom 5px
  font-weight 600
  font-size 14px
  line-height 20px
  background-color white
  .block
    padding-top 20px
    padding-left 20px
    padding-bottom 20px
  .block-main
    display flex
    flex-basis 30%
    border-right 1px solid rgb(173, 140, 90, 0.4)
  .block_position
    position relative
    padding 0 8px
    span
        display block
        margin-top 12px
        font-weight 600
        font-size 24px
        line-height 29px
        text-align center
    img
        position absolute
        top 0
        left 0
        width 100%
  .block_title
    display flex
    flex-direction column
    justify-content space-around
    padding 0 20px
  .block_info-rating
    margin-bottom 10px
    font-weight: 600;
    font-size 30px
    line-height 24px
    color #01796F
  .block_info-site
    text-decoration underline
    color #01796F
  .block_info-feedback
    margin-top 12px
    line-height 17px
    text-decoration underline
    color #01796F

.block-progress
  display flex
  flex-direction column
  flex-basis 20%
  .block-progress-title
    display inline-block
    width 90px
    margin-right 7px
  .progress-bar
    display inline-block
    width 100px
    height 5px
    background #E0E0E0
    overflow hidden
  .bar
    background #01796F
    height 2rem
    width 40%

.block-specifications
  display flex
  flex-direction column
  flex-basis 25%
  span
    opacity 0.6
    margin-right 6px
  div 
    display inline-block
    #ansYes
      color #00A52E;
    #ansNo
      color #E65451;
    
.block-characteristic
  display flex
  flex-direction column
  flex-basis 25%
  padding-right 20px
  padding-left 10px
  span
    &:first-child
      font-weight 500

