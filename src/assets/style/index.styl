@import '../../../node_modules/normalize-styl/normalize.styl'
@import './fonts'
@import './icons'
@import './header'
@import './card'
@import './post'
@import './btns'
@import './catalog'
  
*
  box-sizing border-box

html
  height 100%

body
  height 100%
  font-family Montserrat
  font-style normal
  font-weight bold
  color #000
  display flex
  flex-direction column
  height 100%
  background-color #F1EFEF
a 
  text-decoration none
  color  #01796F
ul, ol   
  list-style none
  margin 0
  padding 0
h1, h2, h3, h4, h5, h6, p 
  margin 0
  padding 0

.container
  width 1220px
  margin 0 auto
  padding-left 10px
  padding-right 10px
  background-color #F1EFEF

.wrapper
  flex 1 0 auto

.main-content
  padding-top 40px
  padding-bottom 73px
  border-bottom 1px solid #01796F
  .title
    font-family Merriweather
    font-style normal
    font-weight normal
    font-size 30px
    line-height 38px
    text-align center
    color black
    margin-bottom 28px

  .filter-form
    display flex
    justify-content space-around
    align-items center
    width 1200px
    height 107px
    font-size 12px
    line-height 15px
    letter-spacing 0.06em
    text-transform uppercase
    color #000000
    background-color #fff      
    .filter-form-group label
      padding-left 15px
      opacity 0.7
    select
        -webkit-appearance none
        -moz-appearance none
        -ms-appearance none
        appearance none
        outline 0
        box-shadow none
        border 0!important
        background white
        background-image none
        flex 1
        padding 0 10px
        color black
        cursor pointer
        font-family Merriweather
        font-style normal
        font-weight normal
        font-size 16px
        line-height 20px
        opacity 1
    .select
        position relative
        display flex
        margin-top 5px
        width 200px
        height 40px
        line-height 4
        background white
        overflow hidden
        border 1px solid #01796F
        &::after
            content '\25BC'
            width 8px
            height 8px
            position absolute
            bottom 35px
            right 10px
            padding 0 10px
            background white
            cursor pointer
            pointer-events none
            transition .25s all ease
        &:hover
            &::after
                color #01796F

/// Table
.top 
  margin-top 40px
  .section-top-title
    font-family Merriweather
    font-style normal
    font-weight normal
    font-size 24px
    line-height 30px
    text-align center
    color black
    text-transform uppercase
  .top-subtitle
    margin-top 4px
    font-size 12px
    line-height 15px
    text-align center
    letter-spacing 0.06em
    text-align center
    text-transform uppercase
    color black
  .cards
    margin-top 20px

///////////// ratings
  .section-title
    margin-bottom 24px
    font-family Merriweather
    font-style normal
    font-weight normal
    font-size 24px
    line-height 30px
    
    color black
    text-align center

  .ratings
    margin-top 70px
    .rating-box
      // margin-top 25px
      display inline-block
      column-width 183px
      column-count 6
      .rating-item-inner
        page-break-inside avoid
        margin-bottom 25px
        .rating-title          
          font-size 12px
          line-height 15px
          letter-spacing 0.06em
          text-transform uppercase
          color black
          opacity 0.7
        .rating-list
          margin-top 4px
          padding-top 8px
          width 183px
          border-top 2px solid #01796F
          font-weight 600
          font-size 14px
          line-height 24px          
          .rating-item a  
            color black

////////description

  .description
    margin-top 55px
    .description-lead
      margin-top 28px
      font-weight 600
      font-size 18px
      line-height 22px
    .description-inner
      display flex
      .description-text
        margin-right 56px
        width 586px
        font-weight 500
        font-size 16px
        line-height 22px
        p   
          margin-top 20px

/////// features
  .features
    margin-top 135px
    .features-list
      display flex
      justify-content space-around
      align-items center
      width 100%
      height 250px
      margin-top 22px
      background-color #fff
      .features-item
        width 15%
        p   
          margin-top 20px
          font-weight 600
          font-size 18px
          line-height 22px

  

footer
  flex 0 0 auto
  margin-top 30px
  .container
    display flex
    justify-content space-between
    margin-bottom 46px
    .copyright
      display flex
      align-items flex-end
      justify-content space-between
      width 50%
      font-weight 500
      font-size 16px
      line-height 22px
      .footer-logo
        position relative
        margin-right 11px
        .footer-logo-crown
          position absolute
          left 60px
          bottom 28px
          width 17px
          height 7px
        .footer-logo-img
          width 118px
          height 22px
    .footer-menu-list
      display flex
      justify-content space-between
      align-items center
      width 40%
      .footer-menu-items
        display inline-block
        padding-bottom 3px
        font-size 14px
        line-height 17px
        letter-spacing 0.1em
        text-transform uppercase
        border-bottom 2px solid #01796F
.hide
  display none